# Vite Environment Variables for ProjectMeats3
#
# RECOMMENDED: Use the centralized configuration system for better management:
# 1. python config/manage_env.py setup development
# 2. python config/manage_env.py validate
#
# For advanced configuration, see: config/README.md and docs/ENVIRONMENT_GUIDE.md
#
# Vite configuration (VITE_ prefix replaces REACT_APP_)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Environment
VITE_ENVIRONMENT=development
VITE_AI_ASSISTANT_ENABLED=true
VITE_ENABLE_DOCUMENT_UPLOAD=true
VITE_ENABLE_CHAT_EXPORT=true
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=pdf,jpg,jpeg,png,txt,doc,docx,xls,xlsx

# Development Features
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true