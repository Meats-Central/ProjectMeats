# React Production Environment Variables
# Production configuration for Digital Ocean App Platform

# API Configuration - Will be set by Digital Ocean App Platform
# REACT_APP_API_BASE_URL will be injected automatically via app.yaml

# Environment
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# AI Assistant Configuration
REACT_APP_AI_ASSISTANT_ENABLED=true

# Features (Production settings)
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true
REACT_APP_ENABLE_CHAT_EXPORT=true

# UI Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_SUPPORTED_FILE_TYPES=pdf,jpg,jpeg,png,txt,doc,docx,xls,xlsx

# Production Features (Disabled for security)
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_DEVTOOLS=false

# Error Tracking (Configure as needed)
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Analytics (Configure as needed)
# REACT_APP_GA_TRACKING_ID=your-google-analytics-id