# Use Node 20 to match Storybook engines and avoid EBADENGINE warnings
FROM node:20-alpine AS build

# Set a new working directory (e.g., /src for the frontend build)
WORKDIR /src

# 1) Install dependencies
# Copy package.json and package-lock.json from frontend to /src/frontend
COPY frontend/package*.json ./frontend/
RUN cd frontend && npm ci

# 2) Copy sources INCLUDING the shared/ folder your TS imports use
# Ensure correct paths based on your new WORKDIR location
COPY frontend ./frontend
COPY shared  ./shared

# 3) Build from inside frontend
WORKDIR /src/frontend  # This should now be the correct location
# Optional: ensure CRA treats this as CI (non-interactive)
ENV CI=true
RUN npm run build

# Runtime
FROM nginx:alpine

# Use your custom nginx config file
COPY deploy/nginx/frontend.conf /etc/nginx/conf.d/default.conf

# Copy the build output from /src/frontend to nginx's html directory
COPY --from=build /src/frontend/build /usr/share/nginx/html

EXPOSE 80

# Healthcheck for the container
HEALTHCHECK --interval=30s --timeout=3s CMD wget -qO- http://127.0.0.1/ || exit 1
