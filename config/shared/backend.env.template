# ProjectMeats Backend Environment Template
# Copy this file to backend/.env and update values for your environment

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# Set to False in production
DEBUG=True
# Generate a strong secret key for each environment
SECRET_KEY=your-secret-key-here
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development: sqlite:///db.sqlite3
# Production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# CORS & CSRF SETTINGS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1

# =============================================================================
# AI SERVICES
# =============================================================================
# Add your AI service API keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For development: django.core.mail.backends.console.EmailBackend
# For production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# FILE STORAGE
# =============================================================================
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# For AWS S3 storage (production)
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Development: locmem:// 
# Production: redis://host:port/db
CACHE_URL=locmem://

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable in production
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# MONITORING & ALERTING (Optional)
# =============================================================================
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
# DATADOG_API_KEY=your-datadog-key