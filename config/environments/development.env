# ProjectMeats Backend - Development Environment
# This file contains development-specific environment variables

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=django-insecure-dev-key-$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25)
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development uses SQLite for simplicity
DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# CORS & CSRF SETTINGS
# =============================================================================
# Allow local development servers
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1

# =============================================================================
# AI SERVICES (Development)
# =============================================================================
# Leave empty for development - add your keys as needed
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# =============================================================================
# FILE STORAGE (Development)
# =============================================================================
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=DEBUG

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Development uses local memory cache
CACHE_URL=locmem://

# =============================================================================
# SECURITY SETTINGS (Development - Disabled)
# =============================================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Enable Django Debug Toolbar and other dev tools
ENABLE_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS_ENABLED=True