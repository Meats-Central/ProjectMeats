# ProjectMeats Backend - Development Environment
# This file contains development-specific environment variables

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=django-insecure-dev-key-$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25)
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development now uses PostgreSQL for environment parity with staging/production
# Configure these variables in GitHub Secrets for deployment
# For local development, set up a local PostgreSQL instance or use SQLite fallback

# Database Engine Selection
# Valid options:
#   - django.db.backends.postgresql  (Recommended for environment parity)
#   - django.db.backends.sqlite3     (Fallback for local development)
# 
# For GitHub Actions deployment, configure this in:
#   Repository Settings → Environments → dev-backend → Add secret: DEVELOPMENT_DB_ENGINE
#
# If not set or empty, SQLite will be used as fallback
DB_ENGINE=django.db.backends.postgresql
DB_NAME=change_me_in_secrets
DB_USER=change_me_in_secrets
DB_PASSWORD=change_me_in_secrets
DB_HOST=change_me_in_secrets
DB_PORT=5432

# SQLite Fallback (DEPRECATED - for local development only)
# Uncomment the line below and comment out PostgreSQL settings to use SQLite
# DB_ENGINE=django.db.backends.sqlite3

# =============================================================================
# CORS & CSRF SETTINGS
# =============================================================================
# Allow local development servers and dev-backend domain
# CSRF_TRUSTED_ORIGINS is required for Django admin CSRF protection when frontend
# and backend are on different domains (e.g., https://dev-backend.meatscentral.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,https://dev.meatscentral.com,https://dev-backend.meatscentral.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,https://dev.meatscentral.com,https://dev-backend.meatscentral.com

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1

# =============================================================================
# AI SERVICES (Development)
# =============================================================================
# Leave empty for development - add your keys as needed
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# =============================================================================
# FILE STORAGE (Development)
# =============================================================================
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=DEBUG

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Development uses local memory cache
CACHE_URL=locmem://

# =============================================================================
# SECURITY SETTINGS (Development - Disabled)
# =============================================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Enable Django Debug Toolbar and other dev tools
ENABLE_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS_ENABLED=True

# =============================================================================
# SUPERUSER CONFIGURATION
# =============================================================================
# Credentials for automatic superuser and root tenant creation
# Change these in production environments
DEVELOPMENT_SUPERUSER_USERNAME=admin
DEVELOPMENT_SUPERUSER_EMAIL=admin@meatscentral.com
DEVELOPMENT_SUPERUSER_PASSWORD=DevAdmin123!SecurePass