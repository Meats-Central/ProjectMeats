FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Only curl is needed for the HEALTHCHECK. libpq not required with psycopg-binary.
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates \
 && rm -rf /var/lib/apt/lists/*

# Install deps first for better layer caching
COPY backend/requirements.txt .
RUN pip install -r requirements.txt \
 && pip install gunicorn whitenoise

# Copy app
COPY backend/ ./

# Create a non-root user
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

# Healthcheck. Prefer a lightweight health endpoint if you have one.
HEALTHCHECK --interval=30s --timeout=5s \
  CMD curl -fsS http://127.0.0.1:8000/api/v1/health/ || exit 1

# Simple retry for migrations so startup is not brittle if DB is momentarily unavailable.
# Note: env vars are injected by Docker via --env-file on the host, not by mounting /app/.env.
CMD /bin/sh -c '\
  for i in 1 2 3 4 5; do \
    python manage.py migrate --noinput && break || { echo "migrate retry $i"; sleep 3; }; \
  done && \
  python manage.py collectstatic --noinput || true && \
  exec gunicorn config.wsgi:application \
    --bind 0.0.0.0:8000 \
    --workers ${GUNICORN_WORKERS:-3} \
    --timeout ${GUNICORN_TIMEOUT:-120} \
    --access-logfile - --error-logfile -'
