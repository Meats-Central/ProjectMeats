# ProjectMeats Production Environment Configuration
# Use this template for Digital Ocean App Platform deployment

# SECURITY WARNING: Keep these values secret in production!
DEBUG=False
SECRET_KEY=your-ultra-secure-secret-key-change-this-immediately
DJANGO_SETTINGS_MODULE=projectmeats.settings.production

# Digital Ocean App Platform will inject these automatically
# ALLOWED_HOSTS will be set by app.yaml
# DATABASE_URL will be set by managed database connection

# Production Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CSRF Trusted Origins (comma-separated list of frontend domains)
# Required for cross-origin requests from frontend to backend (e.g., "View as Admin" button)
# Production example: CSRF_TRUSTED_ORIGINS=https://meatscentral.com,https://backend.meatscentral.com
# Staging/UAT example: CSRF_TRUSTED_ORIGINS=https://uat.meatscentral.com,https://uat-backend.meatscentral.com
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com

# Email Configuration (Configure your email service)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-secure-email-password

# Cache Configuration (Redis recommended)
# REDIS_URL=redis://your-redis-instance:6379

# Admin Security (randomize admin URL)
ADMIN_URL=super-secret-admin-path-123/

# Logging Level
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100