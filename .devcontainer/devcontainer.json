{
  "name": "ProjectMeats Dev Container",
  "image": "ghcr.io/<your-org>/<your-repo>:dev-latest",  // Use the versioned image from GHCR
  "service": "backend",  // Start with the backend service
  "workspaceFolder": "/workspace",  // Default workspace directory in the container

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "postCreateCommand": "echo Ready",  // Optional: run commands after Codespace is created

  "forwardPorts": [8000, 8080],  // Forward necessary ports for frontend and backend
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true
  }
}
