{
  "name": "ProjectMeats Dev Container",
  "image": "ghcr.io/meats-central/projectmeats-backend:dev-170e76c",  // Correct image tag
  "service": "backend",  // Start with the backend service
  "workspaceFolder": "/workspace",  // Default workspace directory in the container

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "postCreateCommand": "mkdir -p /workspace && echo Ready",  // Ensure /workspace exists

  "forwardPorts": [8000, 8080],  // Forward necessary ports for frontend and backend

  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true
  }
}
