{
  "name": "ProjectMeats Dev Container",
  "image": "ghcr.io/meats-central/projectmeats-backend:dev-latest",
  "workspaceFolder": "/app",  // You can use /app or any other directory
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind"  // Mount your local folder to /app in the container
  ],
  "postCreateCommand": "echo 'Workspace setup complete!'",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true
  },
  "extensions": [
    "ms-python.python",
    "dbaeumer.vscode-eslint"
  ]
}
